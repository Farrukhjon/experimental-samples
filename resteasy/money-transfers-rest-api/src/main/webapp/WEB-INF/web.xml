<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Money Transfer Web Application</display-name>

    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/money</param-value>
    </context-param>

    <servlet>
        <servlet-name>money-transfer-servlet</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>org.farrukh.experiments.money.MoneyTransfersApp</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>money-transfer-servlet</servlet-name>
        <url-pattern>/money/*</url-pattern>
    </servlet-mapping>

</web-app>
